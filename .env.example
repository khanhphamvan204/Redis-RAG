# ============================================
# ENVIRONMENT CONFIGURATION
# ============================================

# Database
DATABASE_URL=mongodb://admin:123@localhost:27017

# Redis
REDIS_URL=redis://localhost:6379

# Kafka (localhost because app runs outside Docker)
KAFKA_BROKER_URL=localhost:9092
KAFKA_TOPIC_QUERIES=user-queries

# Spark
SPARK_MASTER_URL=spark://localhost:7077

# Google AI
GOOGLE_API_KEY=your_google_api_key_here

# JWT
JWT_SECRET_KEY=your_secret_key_here

# Hadoop HDFS
HADOOP_NAMENODE_URL=http://localhost:9870
HDFS_USER=hdfs

# ============================================
# SUPERSET CONFIGURATION
# ============================================

# Superset (runs in Docker, connects to MongoDB on host)
SUPERSET_SECRET_KEY=your-superset-secret-key-change-in-production
SUPERSET_JWT_SECRET=your-jwt-secret-for-guest-tokens

# MongoDB connection FOR SUPERSET (from Docker to host)
# Windows/Mac: use host.docker.internal
# Linux: use 172.17.0.1
MONGODB_HOST=host.docker.internal
MONGODB_PORT=27017
MONGODB_USER=admin
MONGODB_PASSWORD=123
MONGODB_DATABASE=faiss_db

# Superset API connection (for guest tokens)
SUPERSET_URL=http://localhost:8089
SUPERSET_ADMIN_USERNAME=admin
SUPERSET_ADMIN_PASSWORD=admin
